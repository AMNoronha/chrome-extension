{
  "name": "UNIVERLAY",
  "description": "A Google Chrome extension!",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "48": "/assets/icons/48.png",
    "128": "/assets/icons/128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "/assets/icons/48.png",
      "128": "/assets/icons/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/intro.min.js",
        "scripts/content.js"
      ],
      "css": [
        "style/introjs.css"
      ]
    }
  ],
  "permissions": [
      "tabs",
      "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/intro.min.js",
        "style/introjs.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
